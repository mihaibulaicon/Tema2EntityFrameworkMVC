@model Tema2.Models.OrderModel

@{
    ViewBag.Title = "Editare";
}

<h2>Editare</h2>


@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.HiddenFor(model => model.Order.OrderId)

        <div class="form-group">
            @Html.LabelFor(model => model.Order.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Order.Value, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.Value)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Order.Customer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Order.Customer.CustomerId,
                                        Model.CustomerList,
                                        "Alege customer")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvează" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Înapoi la listă", "Index")
</div>

